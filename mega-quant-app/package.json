{
  "name": "mega-quant-app",
  "version": "0.1.0",
  "description": "MEGA QUANT - Multi-chain delta-neutral trading platform",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run backend:build && tsc && vite build && electron-builder",
    "preview": "vite preview",
    "backend:dev": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "db:setup": "cd backend && npm run db:setup",
    "electron:dev": "concurrently -n \"backend,frontend,electron\" -c \"blue,green,magenta\" \"npm run backend:dev\" \"vite\" \"wait-on -i 1000 -t 30000 http://localhost:3001 http://localhost:5173 && electron .\"",
    "electron:build": "npm run backend:build && vite build && electron-builder",
    "start": "npm run electron:dev"
  },
  "keywords": [
    "ethereum",
    "trading",
    "delta-neutral",
    "multi-chain",
    "arbitrage"
  ],
  "author": "MEGA QUANT Team",
  "license": "MIT",
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.4",
    "@eil-protocol/accounts": "^0.1.2",
    "@eil-protocol/sdk": "^0.1.2",
    "@monaco-editor/react": "^4.7.0",
    "@tanstack/react-query": "^5.90.10",
    "@uiw/react-codemirror": "^4.25.3",
    "axios": "^1.13.2",
    "bignumber.js": "^9.3.1",
    "decimal.js": "^10.6.0",
    "ethers": "^6.13.4",
    "lightweight-charts": "^5.0.9",
    "monaco-editor": "^0.54.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "technicalindicators": "^3.1.0",
    "viem": "^2.39.3",
    "wagmi": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "electron": "^28.2.10",
    "electron-builder": "^24.13.3",
    "typescript": "^5.9.3",
    "vite": "^5.4.11",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.megaquant.app",
    "productName": "MEGA QUANT",
    "icon": "build/icon.icns",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend/dist"
      },
      {
        "from": "backend/node_modules",
        "to": "backend/node_modules"
      },
      {
        "from": "backend/package.json",
        "to": "backend/package.json"
      },
      {
        "from": "resources/nodejs",
        "to": "nodejs"
      }
    ],
    "asarUnpack": [
      "dist/strategy-worker.js"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Finance"
    }
  }
}
